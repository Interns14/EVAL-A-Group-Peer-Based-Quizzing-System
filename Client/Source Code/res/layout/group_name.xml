<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="550dp"
        android:layout_height="550dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/greatleader" />

    <EditText
        android:id="@+id/groupname"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="81dp"
        android:layout_marginTop="152dp"
        android:ems="8"
        android:hint="Enter your group name."
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/submitGrpName"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/groupname"
        android:layout_below="@+id/groupname"
        android:layout_marginTop="40dp"
        android:text="Submit"
        android:textColor="#FFffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/groupname"
        android:layout_alignRight="@+id/submitGrpName"
        android:layout_below="@+id/submitGrpName"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="20dp" />

</RelativeLayout>