<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/binary">

      <EditText
          android:id="@+id/questiontf"
          android:layout_width="800dp"
          android:layout_height="100dp"
          android:layout_above="@+id/radioButton2"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="80dp"
          android:background="@drawable/textinputborder"
          android:ems="10"
          android:paddingLeft="10dp"
          android:hint="Please enter your question"
          android:textColor="#000000"
          android:textSize="20dp" >

          <requestFocus />
      </EditText>

      <TextView
          android:id="@+id/errorTextinTrueAndFalse"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:layout_alignRight="@+id/questiontf"
          android:layout_below="@+id/radioButton1"
          android:layout_marginLeft="31dp"
          android:layout_marginTop="28dp"
          android:text="Medium Text"
          android:gravity="center"
          android:textColor="#000000"
          android:textSize="18sp"
          android:textAppearance="?android:attr/textAppearanceMedium" />

      <RadioButton
          android:id="@+id/radioButton2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/questiontf"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="108dp"
          android:layout_marginLeft="160dp"
          android:hint="False"
          android:text="False"
          android:textColor="#FFFFFF"
          android:textSize="25sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:layout_above="@+id/questiontf"
          android:layout_alignRight="@+id/questiontf"
          android:layout_marginBottom="54dp"
          android:gravity="center"
          android:text="Enter your question here and click the appropriate T/F button"
          android:textColor="#FFFFFF"
          android:textSize="30dp" />

      <RadioButton
          android:id="@+id/radioButton1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/radioButton2"
          android:layout_alignBottom="@+id/radioButton2"
          android:layout_alignRight="@+id/errorTextinTrueAndFalse"
          android:layout_marginRight="82dp"
          android:hint="True"
          android:text="True"
          android:textColor="#FFFFFF"
          android:textSize="25sp"
          android:textStyle="bold" />

</RelativeLayout>
