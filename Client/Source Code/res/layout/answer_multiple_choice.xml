<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/answerbg1" >

    <TextView
        android1:id="@+id/ans_mul_question"
        android1:layout_width="wrap_content"
        android1:layout_height="100dp"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentRight="true"
        android1:layout_alignParentTop="true"
        android1:gravity="center"
        android1:text="Here is your Question!"
        android1:textColor="#0b6693"
        android1:textSize="40sp" />

    <TextView
        android1:id="@+id/error_ansMul"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentRight="true"
        android1:layout_below="@+id/radioGroup1"
        android1:gravity="center"
        android1:text=""
        android1:textColor="#000000"
        android1:textSize="30dp" />

    <TextView
        android1:id="@+id/marksBox"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/radioGroup1"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentRight="true"
        android1:layout_below="@+id/ans_mul_question"
        android1:gravity="center"
        android1:text="You will get 2 marks if you answer this"
        android1:textAppearance="?android:attr/textAppearanceMedium"
        android1:textColor="#111AFF"
        android1:textSize="10dp" />

    <RadioGroup
        android1:id="@+id/radioGroup1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_centerHorizontal="true"
        android1:layout_centerVertical="true" >

        <RadioButton
            android1:id="@+id/radio1"
            android1:layout_width="wrap_content"
            android1:layout_height="40dp"
            android1:gravity="center"
            android1:text="option1"
            android1:textColor="#4bb498"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/radio2"
            android1:layout_width="wrap_content"
            android1:layout_height="40dp"
            android1:layout_marginRight="166dp"
            android1:gravity="center"
            android1:text="option2"
            android1:textColor="#4bb498"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/radio3"
            android1:layout_width="wrap_content"
            android1:layout_height="40dp"
            android1:gravity="center"
            android1:text="option3"
            android1:textColor="#4bb498"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/radio4"
            android1:layout_width="wrap_content"
            android1:layout_height="40dp"
            android1:gravity="center"
            android1:text="option4"
            android1:textColor="#4bb498"
            android1:textSize="20sp" />
    </RadioGroup>

    <Button
        android1:id="@+id/submit_ans_mul"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_centerVertical="true"
        android1:layout_toRightOf="@+id/radioGroup1"
        android1:text="submit" />

</RelativeLayout>