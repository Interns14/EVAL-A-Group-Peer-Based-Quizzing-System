<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/answerbg1">

     <TextView
         android1:id="@+id/textView1"
         android1:layout_width="wrap_content"
         android1:layout_height="50dp"
         android1:layout_above="@+id/answer"
         android1:layout_alignParentLeft="true"
         android1:layout_alignParentRight="true"
         android1:layout_alignParentTop="true"
         android1:gravity="center"
         android1:text=""
         android1:textColor="#0b6693"
         android1:textSize="30sp" />

     <TextView
         android1:id="@+id/error_ans_one_word"
         android1:layout_width="600dp"
         android1:layout_height="wrap_content"
         android1:layout_alignParentBottom="true"
         android1:layout_alignParentLeft="true"
         android1:layout_below="@+id/button2"
         android1:gravity="center"
         android1:text=""
         android1:textColor="#000000" />

     <EditText
         android1:id="@+id/answer"
         android1:layout_width="200dp"
         android1:layout_height="50dp"
         android1:layout_centerHorizontal="true"
         android1:layout_centerVertical="true"
         android1:ems="10"
         android1:hint="Enter your answer"
         android1:textColor="#4bb498"
         android1:textSize="20sp" >

         <requestFocus />
     </EditText>

     <Button
         android1:id="@+id/button2"
         android1:layout_width="100dp"
         android1:layout_height="50dp"
         android1:layout_alignBaseline="@+id/answer"
         android1:layout_alignBottom="@+id/answer"
         android1:layout_alignParentRight="true"
         android1:layout_marginRight="24dp"
         android1:background="@drawable/draw"
         android1:text="Submit"
         android1:textColor="#ffffff" />

</RelativeLayout>
