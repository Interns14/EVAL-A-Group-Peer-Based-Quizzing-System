<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/try9" >

     <EditText
         android:id="@+id/nwpwd"
         android:layout_width="250dip"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="110dp"
          android:background="@android:drawable/editbox_background"
         android:ems="10"
         android:inputType="textPassword"
         android:hint="New password" />

     <EditText
         android:id="@+id/oldpwd"
         android:layout_width="250dip"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/nwpwd"
         android:layout_marginTop="60dp"
         android:background="@android:drawable/editbox_background"
         android:ems="10"
         android:inputType="textPassword"
         android:hint="Current password" >
         <requestFocus />
     </EditText>

     <EditText
         android:id="@+id/cnwpwd"
         android:layout_width="250dp"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="160dp"
         android:background="@android:drawable/editbox_background"
         android:ems="10"
         android:inputType="textPassword"
         android:hint="Confirm password" />

     <Button
         android:id="@+id/button1"
         android:layout_width="250dip"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/cnwpwd"
         android:layout_below="@+id/cnwpwd"
         android:layout_marginTop="94dp"
         android:background="@drawable/draw"
         android:gravity="center"
         android:text="Submit" />

     <EditText
         android:id="@+id/uIDinPassword"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/oldpwd"
         android:layout_alignParentTop="true"
         android:layout_alignRight="@+id/oldpwd"
         android:layout_marginTop="22dp"
         android:ems="10"
         android:inputType="textPersonName" />

     <TextView
         android:id="@+id/errorBoxPasswordChange"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/button1"
         android:layout_alignParentBottom="true"
         android:layout_alignRight="@+id/button1"
         android:layout_below="@+id/button1"
         android:layout_marginBottom="58dp"
         android:textSize="40dp"
         android:gravity="center"
         android:textColor="#FFFFFF"
         android:text="" />

</RelativeLayout>